########################################
# Backend .env example (do not commit secrets)
########################################

# Core
ENVIRONMENT=development
DATABASE_URL=sqlite:///./dev.db
JWT_SECRET=change_me_dev_jwt
RESET_SECRET=change_me_dev_reset
SECRET_KEY=change_me_dev_loyalty

# CORS / Frontend
ALLOWED_ORIGINS=http://localhost:5173,https://localhost:5173
FRONTEND_URL=http://localhost:5173
STATIC_DIR=static

# Optional integrations
YOCO_SECRET_KEY=
YOCO_WEBHOOK_SECRET=
SENDGRID_API_KEY=
RESET_EMAIL_FROM=no-reply@example.com

# Rate limits (safe defaults)
RATE_LIMIT_PUBLIC_META_CAPACITY=60
RATE_LIMIT_PUBLIC_META_WINDOW=60
RATE_LIMIT_USER_TENANT_CAPACITY=30
RATE_LIMIT_USER_TENANT_WINDOW=60
ENABLE_RATE_LIMIT_OVERRIDES=true
ENABLE_RATE_LIMIT_PENALTIES=true

# Feature flags
ENABLE_DEV_DANGEROUS=true
ENABLE_DEV_JOBS=false
ENABLE_DEV_RATE_LIMITS=true
ENABLE_DEV_AUDIT_VIEW=true

# Tenant bootstrap
DEFAULT_TENANT=default

# Firebase (optional)
GOOGLE_APPLICATION_CREDENTIALS=
