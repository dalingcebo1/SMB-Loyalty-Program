########################################
# Frontend .env example (Vite only reads VITE_* at build time)
########################################

# Point to local backend during dev
VITE_API_BASE_URL=http://localhost:8000

# Display version/hash in UI if used
VITE_APP_VERSION=dev

# Payments
VITE_YOCO_PUBLIC_KEY=

# Firebase (optional locally; REQUIRED in production for Google signâ€‘in and phone verification)
# In production, set these via GitHub Repository Variables or Secrets.
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Environment flag
VITE_ENVIRONMENT=development

# Feature flags (toggle modules; 'false' hides module UI)
VITE_ENABLE_CATALOG=true
VITE_ENABLE_LOYALTY=true
VITE_ENABLE_ORDERS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_USERS=true
VITE_ENABLE_SUBSCRIPTION=true
VITE_ENABLE_CAR_WASH=true

# Build optimization
VITE_DISABLE_SOURCEMAP=true
