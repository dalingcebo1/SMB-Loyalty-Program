# Backend .env.local example (development defaults)
# Copy to Backend/.env.local and adjust as needed for local development.

# Core secrets (dummy values for local use only)
JWT_SECRET=dev_jwt_secret
RESET_SECRET=dev_reset_secret
SECRET_KEY=dev_loyalty_secret

# Database
DATABASE_URL=sqlite:///./Backend/dev.db

# CORS / URLs
ALLOWED_ORIGINS=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email placeholders
SENDGRID_API_KEY=
RESET_EMAIL_FROM=no-reply@example.com

# Payments (sandbox/test values)
YOCO_SECRET_KEY=yoco_secret_placeholder
YOCO_WEBHOOK_SECRET=yoco_webhook_placeholder

# Environment flags
ENVIRONMENT=development
ENABLE_DEV_DANGEROUS=true
ENABLE_DEV_JOBS=true
ENABLE_DEV_RATE_LIMITS=true
ENABLE_DEV_AUDIT_VIEW=true
ENABLE_RATE_LIMIT_OVERRIDES=true
ENABLE_RATE_LIMIT_PENALTIES=true
ENABLE_JOB_QUEUE=false
ENABLE_METRICS=true

# Defaults
DEFAULT_TENANT=default
